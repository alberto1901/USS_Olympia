<?xml version="1.0"?>

<PropertyList>
 <fx>

  <waves>
   <name>waves-sound</name>
   <mode>looped</mode>
   <path>Aircraft/USS_Olympia/Sounds/waves.wav</path>
   <condition>
    <greater-than>
     <property>/fdm/jsbsim/hydro/v-kt</property>
     <value>0</value>
    </greater-than>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <!-- reference-dist>5.0</reference-dist>
   <max-dist>75.0</max-dist -->
   <volume>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>2.0</max>
   </volume>
  </waves>

  <engine>
   <name>engine-sound</name>
   <mode>looped</mode>
   <path>Aircraft/USS_Olympia/Sounds/engine.wav</path>
   <condition>
    <or>
    <greater-than>
    <property>/fdm/jsbsim/propulsion/engine[0]/steam-mean-pressure-psi</property>
      <value>5</value>
    </greater-than>
    <greater-than>
    <property>/fdm/jsbsim/propulsion/engine[1]/steam-mean-pressure-psi</property>
      <value>5</value>
    </greater-than>
    </or>
   </condition>
   <position>
    <x>69.0</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/fdm/jsbsim/hydro/v-kt</property>
    <factor>0.5</factor>
    <offset>0.5</offset>
    <min>0.1</min>
    <max>10.0</max>
   </volume>
   <pitch>
    <property>/fdm/jsbsim/propulsion/engine[0]/steam-mean-pressure-psi</property>
    <factor>0.01</factor>
    <offset>1.0</offset>
    <min>0.0</min>
    <max>3.0</max>
   </pitch>
   <pitch>
    <property>/fdm/jsbsim/propulsion/engine[1]/steam-mean-pressure-psi</property>
    <factor>0.01</factor>
    <offset>0.0</offset>
    <min>1.0</min>
    <max>3.0</max>
   </pitch>
  </engine>

 <stbd-engine-astern>
   <name>stbd-engine-astern-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/bell-astern.wav</path>
   <condition>
    <less-than>
      <property>/fdm/jsbsim/external_reactions/propeller[0]/x</property>
      <value>0</value>
    </less-than>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/fdm/jsbsim/external_reactions/propeller[0]/x</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>2.0</max>
   </volume>
  </stbd-engine-astern>

 <stbd-engine-ahead>
   <name>stbd-engine-ahead-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/bell-ahead.wav</path>
   <condition>
      <greater-than>
        <property>/fdm/jsbsim/external_reactions/propeller[0]/x</property>
        <value>0</value>
      </greater-than>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/fdm/jsbsim/external_reactions/propeller[0]/x</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>2.0</max>
   </volume>
  </stbd-engine-ahead>


 <port-engine-astern>
   <name>port-engine-astern-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/bell-astern.wav</path>
   <condition>
    <less-than>
      <property>/fdm/jsbsim/external_reactions/propeller[1]/x</property>
      <value>0</value>
    </less-than>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/fdm/jsbsim/external_reactions/propeller[1]/x</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>2.0</max>
   </volume>
  </port-engine-astern>

 <port-engine-ahead>
   <name>port-engine-ahead-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/bell-ahead.wav</path>
   <condition>
      <greater-than>
        <property>/fdm/jsbsim/external_reactions/propeller[1]/x</property>
        <value>0</value>
      </greater-than>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/fdm/jsbsim/external_reactions/propeller[1]/x</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>2.0</max>
   </volume>
  </port-engine-ahead>


  <run-aground>
   <name>run-aground-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/crash-settle-sound.wav</path>
   <condition>
     <property>/position/aground</property>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/position/aground</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>5.0</max>
   </volume>
  </run-aground>

  <refloat>
   <name>refloat-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/water-splash-sound.wav</path>
   <condition>
    <not>
     <property>/position/aground</property>
    </not>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/position/aground</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1.0</min>
    <max>2.0</max>
   </volume>
  </refloat>


 <drop-anchor>
   <name>drop-anchor-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/water-splash-sound.wav</path>
   <condition>
     <property>/position/anchored</property>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/position/anchored</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>1</min>
    <max>2.0</max>
   </volume>
  </drop-anchor>

 <raise-anchor>
   <name>raise-anchor-sound</name>
   <path>Aircraft/USS_Olympia/Sounds/raise-anchor-sound.wav</path>
   <condition>
    <not>
     <property>/position/anchored</property>
    </not>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
   <volume>
    <property>/position/anchored</property>
    <factor>1.0</factor>
    <offset>1.0</offset>
    <min>2.0</min>
    <max>5.0</max>
   </volume>
  </raise-anchor>

  <seagull>
    <name>seagull-sound</name>
    <path>Aircraft/USS_Olympia/Sounds/seagull.wav</path>
   <condition>
    <or>
    <greater-than>
     <property>/sim/model/torso_yaw</property>
      <value>10</value>
    </greater-than>
    <less-than>
     <property>/sim/model/torso_yaw</property>
      <value>-20</value>
    </less-than>
    </or>
   </condition>
   <position>
    <x>0.01</x>
    <y>0.01</y>
    <z>0.01</z>
   </position>
  </seagull>

 </fx>

</PropertyList>
