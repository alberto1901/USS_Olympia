<PropertyList>

 <path>Aircraft/ufo/Models/cursor.ac</path>
 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m>0.00</x-m>
  <y-m>0.00</y-m>
  <z-m>0.00</z-m>
 </offsets>

 <model>
  <name>MarkerCenter</name>
  <path>Aircraft/ufo/Models/cursor.ac</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>0.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </offsets>
 </model>

 <model>
  <name>MarkerFwd</name>
  <path>Aircraft/ufo/Models/cursor.ac</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>-8.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </offsets>
 </model>

 <model>
  <name>MarkerAft</name>
  <path>Aircraft/ufo/Models/cursor.ac</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>8.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </offsets>
 </model>

 <animation>
  <type>translate</type>
  <object-name>MarkerFwda</object-name>
  <property>fdm/jsbsim/hydro/environment/wave/level-fwd-ft</property>
  <factor>-0.3048</factor>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>MarkerAfta</object-name>
  <property>fdm/jsbsim/hydro/environment/wave/level-aft-ft</property>
  <factor>-0.3048</factor>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>MarkerCenter</object-name>
  <object-name>MarkerFwd</object-name>
  <object-name>MarkerAft</object-name>
  <property>fdm/jsbsim/hydro/height-agl-ft</property>
  <factor>-0.3048</factor>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>MarkerCenter</object-name>
  <object-name>MarkerFwd</object-name>
  <object-name>MarkerAft</object-name>
  <property>orientation/roll-deg</property>
  <offset-deg>0.0</offset-deg>
  <factor>1.0</factor>
  <center>
   <x-m>0.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>MarkerCenter</object-name>
  <object-name>MarkerFwd</object-name>
  <object-name>MarkerAft</object-name>
  <property>orientation/pitch-deg</property>
  <offset-deg>0.0</offset-deg>
  <factor>-1.0</factor>
  <center>
   <x-m>0.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>MarkerCenter</object-name>
  <property>orientation/heading-deg</property>
  <offset-deg>0.0</offset-deg>
  <factor>1.0</factor>
  <center>
   <x-m>0.00</x-m>
   <y-m>0.00</y-m>
   <z-m>0.00</z-m>
  </center>
  <axis>
   <x>0.0</x>
   <y>0.0</y>
   <z>1.0</z>
  </axis>
 </animation>

</PropertyList>
