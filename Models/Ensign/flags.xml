<PropertyList>

<!-- Stern flag -->
<model>
    <path>flag.ac</path>
</model>

<!-- Stern flag reacts to wind gusts -->
<animation>
  <type>rotate</type>
  <object-name>flag1</object-name>
  <object-name>flag2</object-name>
  <object-name>flag3</object-name>
  <object-name>flag4</object-name>
  <property>environment/wind-from-heading-deg</property>
  <factor>12</factor>
  <center>
    <x-m> 0.000986 </x-m>
    <y-m> 0.001043 </y-m>
    <z-m> -1.287541 </z-m>
  </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
</animation>
