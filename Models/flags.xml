<PropertyList>

<!-- Stern flag -->
<model>
    <path>flag.ac</path>
</model>

  <animation>
    <name>Flag_4-4</name>
    <object-name>flag1</object-name>
    <object-name>flag2</object-name>
    <object-name>flag3</object-name>
    <object-name>flag4</object-name>
  </animation>

  <animation>
    <name>Flag_3-4</name>
    <object-name>flag2</object-name>
    <object-name>flag3</object-name>
    <object-name>flag4</object-name>
  </animation>

  <animation>
    <name>Flag_2-4</name>
