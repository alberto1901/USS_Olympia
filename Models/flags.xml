  <factor>1</factor>
    <center>
      <x-m> 1.667732  </x-m>
      <y-m> 0.3.0000  </y-m>
      <z-m> -2.801662  </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
