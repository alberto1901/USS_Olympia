<PropertyList>

 <title>U.S.S. Olympia</title>
 <!-- Specific keys -->

 <key>
  <name>P</name>
  <desc>Toggle instrument panel</desc>
 </key>

 <key>
  <name>r</name>
  <desc>Refloat ship</desc>
 </key>

 <key>
  <name>b/B</name>
  <desc>Drop/Weigh anchor</desc>
 </key>



<key>
  <name>......</name>
  <desc>              ......</desc>
 </key>
 <key>
  <name>8</name>
  <desc>Increase throttle 10%</desc>
 </key>
 <key>
  <name>2</name>
  <desc>Decrease throttle 10%</desc>
 </key>
 <key>
  <name>[DEL]</name>
  <desc>Reverse starboard engine</desc>
 </key>
 <key>
  <name>[SHIFT][DEL]</name>
  <desc>Reverse port engine</desc>
 </key>
 <key>
  <name>4</name>
  <desc>Rudder to port</desc>
 </key>
 <key>
  <name>5</name>
  <desc>Rudder to center</desc>
 </key>
 <key>
  <name>6</name>
  <desc>Rudder to port</desc>
 </key>


 <key>
  <name>[PAGE UP]</name>
  <desc>Increase throttle 1%</desc>
 </key>
 <key>
  <name>[PAGE DOWN]</name>
  <desc>Decrease throttle 1%</desc>
 </key>


<key>
  <name>......</name>
  <desc>   ARROWS   ... ......</desc>
 </key>
 <key>
  <name>[UP]</name>
  <desc>Increase throttle 10%</desc>
 </key>
 <key>
  <name>[DOWN]</name>
  <desc>Decrease throttle 10%</desc>
 </key>
 <key>
  <name>[DEL]</name>
  <desc>Reverse engines</desc>
 </key>
 <key>
  <name>[LEFT]</name>
  <desc>Rudder to port</desc>
 </key>
 <key>
  <name>5</name>
  <desc>Rudder to center</desc>
 </key>
 <key>
  <name>[RIGHT] </name>
  <desc>Rudder to port</desc>
 </key>


 <key>
  <name>......</name>
  <desc>   FIRE CONTROL   ... ......</desc>
 </key>
 <key>
  <name>f / F</name>
  <desc>Rotate FORE/AFT turret to starboard</desc>
 </key>
 <key>
  <name>d / D</name>
  <desc>Rotate FORE/AFT turret to port</desc>
 </key>
 <key>
  <name>g / G</name>
  <desc>Elevate FORE/AFT main guns</desc>
 </key>
 <key>
  <name>s / S</name>
  <desc>Lower FORE/AFT main guns</desc>
 </key>

 <!-- Handling instructions. -->
 <text>
