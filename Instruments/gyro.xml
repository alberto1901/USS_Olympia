<?xml version="1.0"?>

<!--
USS OLYMPIA gyro compass instrument.

-->

<PropertyList>

  <name>Gyro Compass</name>
    <layers>
      <layer>
        <name>compass rose</name>
        <texture>
          <path>Aircraft/USS_Olympia/Instruments/compass.png</path>
          <x1>0.0</x1>
          <y1>0.515625</y1>
          <x2>0.484375</x2>
          <y2>1.0</y2>
        </texture>
        <w>256</w>
        <h>256</h>
        <transformations>
          <transformation>
            <type>rotation</type>
            <property>/instrumentation/heading-indicator/indicated-heading-deg</property>
            <scale>-1.0</scale>
          </transformation>
        </transformations>
     </layer>
  </layers>

</PropertyList>
